{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "parser": "babel-eslint",
  "plugins": ["react", "prettier", "proposal"],
  "rules": {
    "no-underscore-dangle": 0,
    "no-shadow": 0,

    "react/forbid-prop-types": 0,
    "react/no-array-index-key": 0,
    "react/jsx-props-no-spreading": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/state-in-constructor": 0,

    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tralingComma": "es5",
        "semi": false,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTab": true
      }
    ]
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
